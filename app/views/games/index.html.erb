<h1>Listing games</h1>

<table>
  <tr>
  </tr>

<% @games.each do |game| %>
  <tr>
	<td> <%= h game.name -%> </td>
	<td> <%= game.scores.count -%> entries </td>
    <td><%= link_to 'Show', game_scoreentries_path(game) %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New game', new_game_path %>